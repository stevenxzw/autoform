  html,body
    margin 0
    padding 0
    font-size 12px
  * {
    box-sizing: border-box;
  }
  a
    background transparent
    text-decoration none
    -webkit-tap-highlight-color transparent
    color #000

  /**
   * Improve readability when focused and also mouse hovered in all browsers.
   */

  a:active,
  a:hover
    outline 0

label
  display: inline-block;
  max-width: 100%;
  margin-bottom: 5px
  font-weight: 700;

.fr
  float right
.fl
  float left
.pt20
  padding-top 20px
.pt10
  padding-top 10px
.mt10
  margin-top 10px
.mt20
  margin-top 20px
.ml10
  margin-left 10px
.ml20
  margin-left 20px
.mr10
  margin-right 10px
.mr20
  margin-right 20px