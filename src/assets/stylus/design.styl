.form-nav
    background: #FFF;
    font-size: 14px;
    padding-top: 5px;
    padding-bottom: 0;
    border-bottom: 1px solid #D9D9D9;
    padding 15px 45px
  .nav-body
    height 20px
    .nav-tabs
      height 25px
      margin-top -13px
      margin-left 40px
      .active
        height 30px
        color #920d03
        border-bottom: 2px solid #920d03;
        a
          color #920d03
          font-weight bold

.form-design
  width 100%
  height 600px
  position relative
  .field
    padding: 15px 0;
  .sidebar
    position absolute
    top 0
    right 0
    width 300px
    min-height 600px
    border-left 1px solid #D9D9D9
    border-bottom 0
    z-index 10000
  .preview-container
    position: relative;
    overflow-y: scroll;
    height: 100%;
    margin-right: 300px;
    background-attachment: initial !important;
    text-align right
    .preview-btn
      position fixed
      right 320px
      top 120px
    .preview
      background-color #fff
      max-width: 700px;
      border-width: 1px;
      border-color: #f5e4e4;
      position: relative;
      right 100px
      min-height 1000px
      width: 100%;
      margin-bottom: 30px;
      margin-top 20px
      border-style: solid;
      display: inline-block;
      font-size: 12px;
      vertical-align: top;
      text-align: left;
      .ivu-input[disabled]
        background-color #fff
      .ivu-radio-inner
        background-color #fff !important
      .ivu-checkbox-disabled+span
        color: #6f6d6d


  .field
    position relative
    margin-bottom: 10px;
    padding-right: 20px;
    border: 1px solid #fff;
    cursor: pointer;
    font-size 12px
    .form-lg
      font-size: 22px;
      line-height: 36px;
      span
        font-size 12px
      margin: 0;
    .form-group
      margin-bottom: 15px;
      .form-control
        width 240px
      .control-label
        font-weight normal
        font-size: 14px;
        cursor: pointer;
    .ivu-icon-drag
      display none
    &:hover
      .ivu-icon-drag
        display inline
        position absolute
        right 10%
        top 50%
        font-size 20px
        font-weight bold
    .form-last
      margin 0
    .help-block
      margin 0 0 5px
      font-size 12px
      color #8492A6
    .required:after
      content: " *";
      color: #FF4949;
    .error-message
      margin-top: 7px;
      font-size: 12px;
      color: #FF4949;
    .actions
      position: absolute;
      right: 10px;
      bottom: -12px;
      width: 70px;
      height: 24px;
      display: none;
      i
        display: inline-block;
        width: 24px;
        height: 24px;
        line-height: 24px;
        text-align: center;
        font-size: 14px;
        border-radius: 20px;
        background: #fdf2f2;
        -webkit-transition: 0.3s;
        transition: 0.3s;
        margin-left 5px
      .ivu-icon-android-delete
        color #FF4949
      .ivu-icon-ios-copy
        color #5cb85c
  .field.editing
    border-color: #f5e4e4;
    background: #fdf2f2;
    z-index: 1;
    .actions
      display inline
  .form-header
    border-bottom: 1px solid #e9e9e9;
    .field
      padding: 30px;
      padding-bottom: 15px
  .form-body
    .field
      .form-group
        margin-left 20px
  .time-zindex
    z-index 100 !important
  
